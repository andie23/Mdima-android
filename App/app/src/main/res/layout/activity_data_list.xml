<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataListActivity"
    >
    <include layout="@layout/toolbar" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        tools:layout_editor_absoluteY="56dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="71dp"
            android:layout_height="47dp"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:scaleType="fitStart"
            android:src="@drawable/information_icon"
            app:layout_constraintBottom_toBottomOf="@+id/fragmentTitle"
            app:layout_constraintEnd_toEndOf="@+id/fragmentTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentTitle"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragmentSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="8dp"
            android:text="information.."
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@+id/fragmentTitle"
            app:layout_constraintTop_toBottomOf="@+id/fragmentTitle" />
    </android.support.constraint.ConstraintLayout>

    <fragment
        android:name="mw.forwardplay.mdima.modules.SuperFragment"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
