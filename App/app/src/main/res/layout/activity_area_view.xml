<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AreaViewActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/locationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_placeholder"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/cardLinkHeaderColor"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:text="@string/next_blackout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/blackoutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/date_placeholder" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/time_placeholder" />

                        <TextView
                            android:id="@+id/finishingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/time_placeholder" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="@string/number_of_blackouts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/numberOfBlackouts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/number_of_blackouts_placeholder" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:text="@string/average_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/averageDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/duration_placeholder" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:onClick="onShowAllSchedules"
                android:layout_marginTop="10dp"
                android:text="@string/full_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultButtonTextColor"
                />

            <Button
                android:layout_marginTop="10dp"
                android:text="@string/near_by_locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultButtonTextColor"/>

            <Button
                android:layout_marginTop="10dp"
                android:text="@string/track_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultButtonTextColor"
                />

            <Button
                android:layout_marginTop="10dp"
                android:text="@string/make_primary_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultButtonTextColor"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>